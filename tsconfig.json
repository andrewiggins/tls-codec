{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"baseUrl": ".",
		"outDir": "./dist",
		"moduleResolution": "node16",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["tests", "dist", "node_modules"]
}
